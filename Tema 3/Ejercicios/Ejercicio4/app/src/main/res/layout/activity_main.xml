<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:columnCount="4"
    android:rowCount="6"
    tools:context=".MainActivity">

    <!-- Fila 1 -->

    <TextView
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          /           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <!-- Fila 2 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          1           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          2           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          3           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          *           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <!-- Fila 3 -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          4           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          5           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          6           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          -           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <!-- Fila 4 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          7           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          8           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="          9           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="fill_vertical"
        android:layout_rowSpan="3"
        android:background="@color/purple"
        android:text="          +           "
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <!-- Fila 5 -->
    <TextView
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="                         0"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="         00           "
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

    <!-- Fila 6 -->
    <TextView
        android:layout_width="0dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="3"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:text="                                        ="
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="5dp"/>

</GridLayout>