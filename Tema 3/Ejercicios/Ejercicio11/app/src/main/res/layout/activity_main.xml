<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="50dp"/>

    <EditText
        android:id="@+id/user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:textColor="@color/grey"
        android:text="@string/user_input_placeholder"/>

    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_input"
        android:textColor="@color/grey"
        android:text="@string/password_input_placeholder"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/forgotten_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotten_password_text"
        android:layout_below="@+id/password_input"
        android:textColor="@color/grey"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:textColor="@color/white"
        android:layout_below="@+id/password_input"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/forgotten_password_text"
        android:backgroundTint="@color/purple"/>

</RelativeLayout>