<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/main"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_3_text1"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">


        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/activity_3_checkbox_text1"
            android:layout_marginRight="50dp"/>

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_row="0"
            android:layout_column="1"
            android:text="@string/activity_3_checkbox_text2"
            android:layout_marginRight="50dp"/>

        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_row="1"
            android:layout_column="0"
            android:text="@string/activity_3_checkbox_text3"
            android:layout_marginRight="50dp"/>

        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_row="1"
            android:layout_column="1"
            android:text="@string/activity_3_checkbox_text4"
            android:layout_marginRight="50dp"/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_3_text2"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/miSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/spinner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3"
        android:stepSize="1"/>

    <Button
        android:id="@+id/botonActividad1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a actividad 1"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/botonActividad2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a actividad 2"
        android:layout_gravity="center"/>

</LinearLayout>